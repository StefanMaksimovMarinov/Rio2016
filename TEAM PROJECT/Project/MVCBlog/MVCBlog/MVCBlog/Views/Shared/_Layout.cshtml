<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Рио 2016</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/moment.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    @RenderSection("scripts", required: false)
    @using MVCBlog.Classes
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Рио 2016", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><img src="~/Images/Olympic_Rings.svg.png" alt="Olympic Rings" height="32" width="62" /></li>
                    <li>@Html.ActionLink("Начало", "Index", "Home")</li>
                    <li>@Html.ActionLink("Публикации", "Index", "Posts")</li>
                    <li>@Html.ActionLink("Нов пост", "Create", "Posts")</li>
                    <li>@Html.ActionLink("Фотоалбум", "Index", "Photoalbums")</li>
                    <li>@Html.ActionLink("Класиране", "Ranking", "Home")</li>
                    <li>@Html.ActionLink("Участници", "Players", "Home")</li>
                    <li>@Html.ActionLink("История", "History", "Home")</li>
                    <li>@Html.ActionLink("Подготовка", "Preparation", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Рио 2016</p>
        </footer>
    </div>
</body>
</html>
