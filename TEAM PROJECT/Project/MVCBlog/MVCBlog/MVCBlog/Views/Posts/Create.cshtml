@model MVCBlog.Models.Post

@{
    ViewBag.Title = "Create";
}

<h2>Създай нов пост</h2>


@using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Пост</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @{string Заглавие = "";}
            @Html.LabelFor(model => Заглавие, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @{string Съдържание = "";}
            @Html.LabelFor(model => Съдържание, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @{string Дата = "";}
            @Html.LabelFor(model => Дата, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", id = "postDate" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Създай" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script type="text/javascript">
        $(function () {
            $('#postDate').datetimepicker({
                format: 'YYYY/MM/DD hh:ss'
            });
        });
</script>

<div>
    @Html.ActionLink("Обратно към Публикации", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
