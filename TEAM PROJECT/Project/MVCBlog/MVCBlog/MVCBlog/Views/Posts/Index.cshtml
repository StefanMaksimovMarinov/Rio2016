@using MVCBlog.Classes;
@using MVCBlog.Models;

@model IEnumerable<Post>

@{
    ViewBag.Title = "Публикации";
}
<body class="body-posts">
    <h2>Публикации</h2>

    <p>
        @Html.ActionLink("Нов пост", "Create")
    </p>
    <table class="table">
    <tr>
        <th></th>
        <th>
            Заглавие
        </th>
        <th>
            Съдържание
        </th>
        <th>
            Дата
        </th>
        <th>
            Автор
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
                <tr class="row">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Utils.CutText(item.Body)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @if (item.Author != null)
                        {
                            @item.Author.UserName;
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Редактирай", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Детайли", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Изтрий", "Delete", new { id = item.Id })
                    </td>
                </tr>
                }

    </table>
</body>